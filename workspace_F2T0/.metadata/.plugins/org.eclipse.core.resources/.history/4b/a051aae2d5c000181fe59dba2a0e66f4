package main;

public class SoundSource {

	public int px=0;
	public int py=0;
	
	public int rx=0;
	public int ry=0;
	
	public boolean active=false;
	
	public SoundSource(int x, int y){
		
		px=x;
		py=y;
		
	}
	
	
	public void compute(int x, int y){
		rx=px-x;
		ry=py=y;
	}
	
	
	public void activate(boolean activity){
		active=activity;
	}
	
}
